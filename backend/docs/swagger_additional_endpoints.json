    "/api/v1/accounts": {
      "get": {
        "description": "Retrieve list of all accounts with optional filtering and pagination",
        "tags": ["Accounts"],
        "summary": "Get all accounts",
        "parameters": [
          {
            "type": "string",
            "description": "Account type filter (ASSET, LIABILITY, EQUITY, REVENUE, EXPENSE)",
            "name": "type",
            "in": "query"
          },
          {
            "type": "string",
            "description": "Search by account name or code",
            "name": "search",
            "in": "query"
          },
          {
            "type": "boolean",
            "description": "Filter active/inactive accounts",
            "name": "is_active",
            "in": "query"
          },
          {
            "type": "integer",
            "description": "Page number",
            "name": "page",
            "in": "query"
          },
          {
            "type": "integer",
            "description": "Items per page",
            "name": "limit",
            "in": "query"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string",
                  "example": "success"
                },
                "data": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/models.Account"
                  }
                },
                "pagination": {
                  "type": "object",
                  "properties": {
                    "page": {"type": "integer"},
                    "limit": {"type": "integer"},
                    "total": {"type": "integer"}
                  }
                }
              }
            }
          }
        },
        "security": [{"BearerAuth": []}]
      },
      "post": {
        "description": "Create a new account in the chart of accounts",
        "tags": ["Accounts"],
        "summary": "Create new account",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "description": "Account creation data",
            "name": "account",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "required": ["code", "name", "type"],
              "properties": {
                "code": {
                  "type": "string",
                  "example": "1100-001",
                  "description": "Unique account code"
                },
                "name": {
                  "type": "string",
                  "example": "Kas Kecil",
                  "description": "Account name"
                },
                "type": {
                  "type": "string",
                  "enum": ["ASSET", "LIABILITY", "EQUITY", "REVENUE", "EXPENSE"],
                  "example": "ASSET",
                  "description": "Account type"
                },
                "category": {
                  "type": "string",
                  "example": "current_asset",
                  "description": "Account category"
                },
                "parent_id": {
                  "type": "integer",
                  "example": 1,
                  "description": "Parent account ID for hierarchy"
                },
                "description": {
                  "type": "string",
                  "example": "Kas untuk keperluan operasional harian",
                  "description": "Account description"
                },
                "is_header": {
                  "type": "boolean",
                  "example": false,
                  "description": "Whether this is a header account"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Account created successfully",
            "schema": {
              "$ref": "#/definitions/models.AccountResponse"
            }
          },
          "400": {
            "description": "Bad request",
            "schema": {
              "$ref": "#/definitions/models.ErrorResponse"
            }
          },
          "409": {
            "description": "Account code already exists",
            "schema": {
              "$ref": "#/definitions/models.ErrorResponse"
            }
          }
        },
        "security": [{"BearerAuth": []}]
      }
    },
