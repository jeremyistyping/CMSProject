{
  "paths": {
    "/api/v1/assets": {
      "get": {
        "tags": ["Assets"],
        "summary": "Get all assets",
        "description": "Retrieve list of all assets with filtering and pagination",
        "parameters": [
          {
            "name": "search",
            "in": "query",
            "description": "Search by asset name or code",
            "type": "string"
          },
          {
            "name": "category_id",
            "in": "query",
            "description": "Filter by category ID",
            "type": "integer"
          },
          {
            "name": "status",
            "in": "query",
            "description": "Filter by asset status",
            "type": "string"
          },
          {
            "name": "page",
            "in": "query",
            "description": "Page number",
            "type": "integer"
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Items per page",
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "type": "object",
              "properties": {
                "status": {"type": "string", "example": "success"},
                "data": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {"type": "integer", "example": 1},
                      "name": {"type": "string", "example": "Office Computer"},
                      "code": {"type": "string", "example": "AST-001"},
                      "category": {"type": "string", "example": "IT Equipment"},
                      "acquisition_cost": {"type": "number", "example": 5000000},
                      "current_value": {"type": "number", "example": 3000000},
                      "depreciation_method": {"type": "string", "example": "STRAIGHT_LINE"},
                      "useful_life_years": {"type": "integer", "example": 5},
                      "status": {"type": "string", "example": "ACTIVE"},
                      "created_at": {"type": "string", "format": "date-time"},
                      "updated_at": {"type": "string", "format": "date-time"}
                    }
                  }
                },
                "pagination": {
                  "type": "object",
                  "properties": {
                    "page": {"type": "integer"},
                    "limit": {"type": "integer"},
                    "total": {"type": "integer"}
                  }
                }
              }
            }
          }
        },
        "security": [{"BearerAuth": []}]
      },
      "post": {
        "tags": ["Assets"],
        "summary": "Create new asset",
        "description": "Create a new fixed asset",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "asset",
            "in": "body",
            "description": "Asset creation data",
            "required": true,
            "schema": {
              "type": "object",
              "required": ["name", "code", "acquisition_cost", "category_id"],
              "properties": {
                "name": {
                  "type": "string",
                  "example": "Office Computer",
                  "description": "Asset name"
                },
                "code": {
                  "type": "string",
                  "example": "AST-001",
                  "description": "Unique asset code"
                },
                "category_id": {
                  "type": "integer",
                  "example": 1,
                  "description": "Asset category ID"
                },
                "acquisition_cost": {
                  "type": "number",
                  "example": 5000000,
                  "description": "Asset acquisition cost"
                },
                "acquisition_date": {
                  "type": "string",
                  "format": "date",
                  "example": "2024-01-15",
                  "description": "Asset acquisition date"
                },
                "depreciation_method": {
                  "type": "string",
                  "enum": ["STRAIGHT_LINE", "DECLINING_BALANCE", "UNITS_OF_PRODUCTION"],
                  "example": "STRAIGHT_LINE",
                  "description": "Depreciation method"
                },
                "useful_life_years": {
                  "type": "integer",
                  "example": 5,
                  "description": "Estimated useful life in years"
                },
                "residual_value": {
                  "type": "number",
                  "example": 500000,
                  "description": "Expected residual value"
                },
                "location": {
                  "type": "string",
                  "example": "Office Floor 1",
                  "description": "Asset location"
                },
                "description": {
                  "type": "string",
                  "example": "High performance computer for accounting work",
                  "description": "Asset description"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Asset created successfully",
            "schema": {
              "type": "object",
              "properties": {
                "status": {"type": "string", "example": "success"},
                "message": {"type": "string", "example": "Asset created successfully"},
                "data": {
                  "type": "object",
                  "properties": {
                    "id": {"type": "integer", "example": 1},
                    "name": {"type": "string", "example": "Office Computer"},
                    "code": {"type": "string", "example": "AST-001"},
                    "acquisition_cost": {"type": "number", "example": 5000000}
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "schema": {
              "$ref": "#/definitions/models.ErrorResponse"
            }
          }
        },
        "security": [{"BearerAuth": []}]
      }
    },
    "/api/v1/assets/{id}": {
      "get": {
        "tags": ["Assets"],
        "summary": "Get asset by ID",
        "description": "Get asset details by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Asset ID",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "type": "object",
              "properties": {
                "status": {"type": "string", "example": "success"},
                "data": {
                  "type": "object",
                  "properties": {
                    "id": {"type": "integer", "example": 1},
                    "name": {"type": "string", "example": "Office Computer"},
                    "code": {"type": "string", "example": "AST-001"},
                    "acquisition_cost": {"type": "number", "example": 5000000},
                    "current_value": {"type": "number", "example": 3000000},
                    "accumulated_depreciation": {"type": "number", "example": 2000000},
                    "depreciation_method": {"type": "string", "example": "STRAIGHT_LINE"},
                    "useful_life_years": {"type": "integer", "example": 5},
                    "residual_value": {"type": "number", "example": 500000},
                    "location": {"type": "string", "example": "Office Floor 1"},
                    "status": {"type": "string", "example": "ACTIVE"},
                    "created_at": {"type": "string", "format": "date-time"},
                    "updated_at": {"type": "string", "format": "date-time"}
                  }
                }
              }
            }
          },
          "404": {
            "description": "Asset not found",
            "schema": {
              "$ref": "#/definitions/models.ErrorResponse"
            }
          }
        },
        "security": [{"BearerAuth": []}]
      },
      "put": {
        "tags": ["Assets"],
        "summary": "Update asset",
        "description": "Update asset details",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Asset ID",
            "required": true,
            "type": "integer"
          },
          {
            "name": "asset",
            "in": "body",
            "description": "Asset update data",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {"type": "string", "example": "Updated Computer"},
                "location": {"type": "string", "example": "Office Floor 2"},
                "status": {"type": "string", "example": "ACTIVE"},
                "description": {"type": "string", "example": "Updated description"},
                "notes": {"type": "string", "example": "Maintenance notes"}
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Asset updated successfully",
            "schema": {
              "type": "object",
              "properties": {
                "status": {"type": "string", "example": "success"},
                "message": {"type": "string", "example": "Asset updated successfully"}
              }
            }
          },
          "404": {
            "description": "Asset not found",
            "schema": {
              "$ref": "#/definitions/models.ErrorResponse"
            }
          }
        },
        "security": [{"BearerAuth": []}]
      },
      "delete": {
        "tags": ["Assets"],
        "summary": "Delete asset",
        "description": "Delete asset (only if not in use)",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Asset ID",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Asset deleted successfully",
            "schema": {
              "type": "object",
              "properties": {
                "status": {"type": "string", "example": "success"},
                "message": {"type": "string", "example": "Asset deleted successfully"}
              }
            }
          },
          "400": {
            "description": "Cannot delete asset in use",
            "schema": {
              "$ref": "#/definitions/models.ErrorResponse"
            }
          },
          "404": {
            "description": "Asset not found",
            "schema": {
              "$ref": "#/definitions/models.ErrorResponse"
            }
          }
        },
        "security": [{"BearerAuth": []}]
      }
    },
    "/api/v1/assets/{id}/depreciation-schedule": {
      "get": {
        "tags": ["Assets"],
        "summary": "Get depreciation schedule",
        "description": "Get depreciation schedule for an asset",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Asset ID",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "type": "object",
              "properties": {
                "status": {"type": "string", "example": "success"},
                "data": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "year": {"type": "integer", "example": 2024},
                      "opening_value": {"type": "number", "example": 5000000},
                      "depreciation_amount": {"type": "number", "example": 900000},
                      "closing_value": {"type": "number", "example": 4100000}
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Asset not found",
            "schema": {
              "$ref": "#/definitions/models.ErrorResponse"
            }
          }
        },
        "security": [{"BearerAuth": []}]
      }
    },
    "/api/v1/assets/{id}/capitalize": {
      "post": {
        "tags": ["Assets"],
        "summary": "Capitalize asset",
