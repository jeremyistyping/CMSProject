                    "total_depreciation": {"type": "number", "example": 200000000},
                    "by_category": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "category": {"type": "string"},
                          "count": {"type": "integer"},
                          "value": {"type": "number"}
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "security": [{"BearerAuth": []}]
      }
    },

