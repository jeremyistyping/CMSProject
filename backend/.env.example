# ENVIRONMENT CONFIGURATION EXAMPLE
# Copy this file to .env and adjust values for your environment
# ================================================================

# Database Configuration
# ======================
# Format: postgres://username:password@host:port/database?options
# 
# Examples:
# - Local: postgres://postgres:postgres@localhost/sistem_akuntans_dev?sslmode=disable
# - Docker: postgres://postgres:docker123@localhost:5433/sistem_akuntans_dev?sslmode=disable  
# - Production: postgres://prod_user:prod_pass@prod-server.com/sistem_akuntans_prod?sslmode=require
# - Testing: postgres://test_user:test_pass@test-server/sistem_akuntans_test?sslmode=prefer

DATABASE_URL=postgres://username:password@localhost/database_name?sslmode=disable

# JWT Configuration
# =================
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_secure

# Server Configuration  
# ====================
SERVER_PORT=8080
ENVIRONMENT=development

# Development Flags
# =================
# Set to true to prevent balance reset during development
# Set to false in production to allow automatic balance sync
SKIP_BALANCE_RESET=true

# Payment Journal Configuration
# =============================
# Enable legacy payment journal creation (for backward compatibility)
# Set to true to create journal entries that update COA balances automatically
# This ensures Utang Usaha reduces when credit purchases are paid
ENABLE_LEGACY_PAYMENT_JOURNALS=true

# Enable SSOT payment journal integration (modern approach)
# Set to true to integrate payment with SSOT journal system
# This provides better audit trail and balance synchronization
ENABLE_SSOT_PAYMENT_JOURNALS=true

# CORS Configuration
# ==================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

