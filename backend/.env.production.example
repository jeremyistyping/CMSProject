# Production Configuration Template
# Copy this file to .env.production for production deployment

# Database Configuration
DATABASE_URL=postgres://username:password@host:port/database_name?sslmode=require

# JWT Configuration
JWT_SECRET=generate-a-strong-secret-key-for-production-use-at-least-32-characters
JWT_ACCESS_SECRET=access-token-secret-different-from-refresh
JWT_REFRESH_SECRET=refresh-token-secret-different-from-access

# Server Configuration
SERVER_PORT=8080
ENVIRONMENT=production

# Security Configuration
ENABLE_HTTPS=true
ENABLE_RATE_LIMIT=true
ENABLE_SECURITY_HEADERS=true
ENABLE_MONITORING=true

# Swagger Configuration (Production)
SWAGGER_HOST=api.yourdomain.com
SWAGGER_SCHEME=https
SWAGGER_BASE_PATH=/api/v1
SWAGGER_TITLE=Sistema Akuntansi API
SWAGGER_DESCRIPTION=Production API for comprehensive accounting system
ENABLE_SWAGGER=true

# CORS Configuration (Production)
ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com,https://admin.yourdomain.com
# Alternative: Single origin
# ALLOWED_ORIGINS=https://yourdomain.com

# Domain Configuration
DOMAIN=yourdomain.com
APP_URL=https://yourdomain.com
FRONTEND_URL=https://app.yourdomain.com

# Session Configuration
SESSION_SECRET=generate-another-strong-secret-for-sessions
SESSION_MAX_AGE=28800
SESSION_IDLE_TIMEOUT=1800

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_AUTH_REQUESTS_PER_MINUTE=5
RATE_LIMIT_API_REQUESTS_PER_MINUTE=200

# Cookie Security (Production)
COOKIE_SECURE=true
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=strict

# Monitoring & Alerts
ALERT_EMAIL=admin@yourdomain.com
LOG_LEVEL=warn
LOG_FILE=/var/log/accounting-system.log

# Development Flags (Usually false in production)
SKIP_BALANCE_RESET=false